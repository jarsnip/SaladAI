datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  OWNER
  ADMIN
  ANALYST
}

enum ThreadStatus {
  OPEN
  ENDED_PENDING
  ENDED_LOCKED
  REOPENED
}

enum AuthorType {
  USER
  BOT
}

model User {
  id        Int      @id @default(autoincrement())
  discordId String   @unique
  role      Role
  createdAt DateTime @default(now())
}

model Config {
  id                Int      @id @default(1)
  channelId         String
  systemPrompt      String
  maxTokens         Int
  inactivityMinutes Int
  purgeMinutes      Int
  retentionDays     Int
  rolesCanOpen      String[]
  ownerDiscordId    String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Thread {
  id              Int          @id @default(autoincrement())
  discordThreadId String       @unique
  status          ThreadStatus
  createdAt       DateTime     @default(now())
  endedAt         DateTime?
  lastActivity    DateTime
}

model Message {
  id               Int        @id @default(autoincrement())
  threadId         Int
  discordMessageId String     @unique
  authorDiscordId  String
  authorType       AuthorType
  contentMd        String
  createdAt        DateTime   @default(now())
}

model Feedback {
  id             Int      @id @default(autoincrement())
  threadId       Int      @unique
  value          Int
  raterDiscordId String
  createdAt      DateTime @default(now())
}

model Transcript {
  id        Int      @id @default(autoincrement())
  threadId  Int      @unique
  filePath  String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model AiCall {
  id           Int      @id @default(autoincrement())
  threadId     Int
  model        String
  inputTokens  Int
  outputTokens Int
  costUsd      Float
  latencyMs    Int
  createdAt    DateTime @default(now())
}
